<p id="notice"><%= notice %></p>
<h2> Select action for this user </h2>
<div>
<%= form_tag(controller: "log_actions", action: "log_task") do %>

  <%= label_tag(:name, 'User name') %>
  <%= text_field_tag(:name, @user.name, :readonly => true) %><br/>
  
  <%= label_tag :action_list, 'Select Action' %>
  <%= collection_select(@user.id, :action_list_id, ActionList.all, :id, :name, :include_blank => "Please select action") %><br/>

  <%= submit_tag("Submit") %>
<% end %>
</div>
<br/>
<p>
  <strong> Below are logged in task for the user:</strong>
  <%= @user.name %>
</p>
<ul>
  <% @user.action_lists.each do |action| %>
   <li><span>Task Name: <%= action.name %></span></li>
  <%end%>
</ul>

<br/>
<%= link_to 'Edit User', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>